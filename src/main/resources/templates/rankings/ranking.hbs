{{#partial "contenido"}}
    <div class="page-title row-cols-auto pt-3 pe-3 ps-3 pb-5 text-center d-flex justify-content-center align-items-center flex-column">
        <a href="/rankings" class="volver align-self-start fs-4 text-decoration-none d-none d-lg-block"> < Volver </a>
        <a href="/rankings" class="volver align-self-start fs-4 text-decoration-none d-sm-block d-lg-none"><</a>
        <h1 class="white-text">{{ranking.nombre}}</h1>
    </div>
    <div class="mt-3 ms-5 me-5 text-md-start text-center">
        <h2 class="fw-normal">Ranking</h2>
        <hr>
        <div class="d-flex align-items-center justify-content-center mt-4 col-12 flex-column">
            <table class="table table-bordered w-75 col-12">
                <thead class="table-success text-center">
                <tr>
                    <th scope="col" class="col-8">Entidad</th>
                    <th scope="col" class="col-4">Valor</th>
                </tr>
                </thead>
                <tbody class="text-center">
                {{#each items}}
                    <tr>
                        <th>{{this.entidad.nombre}}</th>
                        <td>{{this.valorParametro}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
            <a href="files/{{ranking.nombre}}.pdf" class="btn btn-primario ms-0 mb-3 ms-lg-5 fs-5 pt-2 pb-2 pe-5 ps-5" download>Descargar PDF</a>
        </div>
    </div>
{{/partial}}
