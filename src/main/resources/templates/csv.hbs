{{#partial "contenido"}}
    <div class="page-title text-center p-5">
        <h1 class="white-text">Entidades Prestadoras y Organismos de Control</h1>
    </div>
    <div class="container text-center">
        <div class = row>
            <div  class="col-md-6 offset-md-3">
                <button  id="btnSubirCSV" class="btn btn-primario shadow-lg w-50 mt-4 border-0 fs-4 p-1">Subir CSV</button>
                <input type="file" id="archivoCSV" style="display: none;">
            </div>
        </div>

    </div>
        <div class="container text-center">
            <h3 class="gray-text mb-3 mt-4">Entidades y Organismos del Sistema</h3>
            <div class="row align-items-start">
                <div class="col">
                        <table class="table table-striped">
                        <h4> Entidades Prestadoras</h4>
                            <tr>
                                <th>Nombre</th>
                                <th>Descripción</th>
                            </tr>
                            {{#each entidades}}
                                <tr>
                                    <td>{{this.nombre}}</td>
                                    <td>{{this.descripcion}}</td>
                                </tr>
                            {{/each}}
                    </table>
                 </div>
                <div class="col">
                    <table class="table table-striped">
                        <h4> Organismos de Control</h4>
                        <tr>
                            <th>Nombre</th>
                        </tr>
                        {{#each organismos}}
                            <tr>
                                <td>{{this.nombre}}</td>
                            </tr>
                        {{/each}}
                    </table>
                </div>
        </div>
{{/partial}}
